{
  "compilerOptions": {
    "jsx": "react",
    "target": "es2016",
    "baseUrl": "./",
    "paths": {
      "utils/*": [
        "src/utils/*"
      ],
      "@/*": [
        "src/*"
      ],
      "components/*": ["src/components/*"],
      "apis/*": ["src/apis/*"],
      "hooks/*": ["src/hooks/*"],
      "store/*": ["src/store/*"]
    },
    "module": "commonjs",
    "types": [
      "node",
      "jest",
      "@testing-library/jest-dom"
    ],
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  }
}