{
  "compilerOptions": {
    "target": "es2016",
    "baseUrl": "./",
    "paths": {
      "utils/*": [
        "src/utils/*"
      ],
      "@/*": [
        "src/*"
      ]
    },
    "module": "commonjs",
    "types": [
      "node",
      "jest"
    ],
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  }
}